generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  deleted_at  DateTime?
  businesses  Businesses[]

  @@index([email])
  @@map("users")
}

model Businesses {
  id          String       @id @default(uuid())
  user_id     String
  name        String
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  deleted_at  DateTime?

  owner       Users         @relation(fields: [user_id], references: [id])
  products    Products[]
  ai_runs    AiRuns[] 

  @@index([user_id])
  @@map("businesses")
}

enum ProductUnit {
  PCS
  BOX
  KG
  LITER
  PACK
}

model Products {
  id           String     @id @default(uuid())
  business_id  String
  name         String
  unit         String
  image_url    String? // Cloudflare CDN url
  is_active    Boolean    @default(true)
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt
  deleted_at   DateTime?

  business     Businesses @relation(fields: [business_id], references: [id])
  stocks       Stocks[]

  @@index([business_id])
  @@map("products")
}

model TransactionItems {
  id String @id @default(uuid())
  transaction_id String
  product_id String
  quantity Int
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt
  deleted_at   DateTime?

  @@map("transaction_items")
  @@index([product_id])
  @@index([transaction_id])
}

model Stocks {
  id String @id @default(uuid())
  product_id String
  stock_on_hand Int
  updated_at   DateTime   @updatedAt
  deleted_at   DateTime?

  product     Products @relation(fields: [product_id], references: [id])

  @@index([product_id])
  @@map("stocks")
}


enum AiRunStatus {
  PROCESSING
  COMPLETED
  FAILED
}

model AiRuns {
  id String @id @default(uuid())
  business_id String
  status AiRunStatus
  generated_at DateTime
  error_message String @db.Text
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt
  deleted_at   DateTime?

  business     Businesses   @relation(fields: [business_id], references: [id])

  @@map("ai_runs")
  @@index([business_id])
}