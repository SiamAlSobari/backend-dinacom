generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id         String      @id @default(uuid())
  name       String
  email      String
  password   String
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  deleted_at DateTime?
  businesses Businesses?

  subscriptions Subscriptions[]
  payments      Payments[]
  activities   Activity[]
  notifications Notifications[]

  @@unique([email, deleted_at])
  @@index([email, deleted_at])
  @@map("users")
}

enum SubscriptionDuration {
  MONTHLY_1
  MONTHLY_2
  MONTHLY_3
}

enum SubscriptionStatus {
  ACTIVE
  PENDING
  CANCELLED
  EXPIRED
}

model Subscriptions {
  id String    @id @default(uuid())
  user_id String
  plan_duration SubscriptionDuration
  start_date DateTime
  status SubscriptionStatus
  end_date DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  payments Payments[]
  @@unique([user_id, deleted_at])
  @@index([user_id, deleted_at])
  @@map("subscriptions")
}

enum PaymentStatus {
  PENDING
  CAPTURE
  SETTLEMENT
  DENY
  CANCEL
  EXPIRED
  REFUND
}

model Payments {
  id String @id @default(uuid())
  user_id String
  subscription_id String
  order_id String
  gross_amount Int
  payment_type String?
  transaction_time DateTime?
  status PaymentStatus
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  subscription Subscriptions @relation(fields: [subscription_id], references: [id], onDelete: Cascade)
  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  @@index([user_id, deleted_at])
  @@map("payments")
}

model Businesses {
  id         String    @id @default(uuid())
  user_id    String    @unique
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  owner        Users          @relation(fields: [user_id], references: [id])
  products     Products[]
  ai_runs      AiRuns[]
  transactions Transactions[]
  activities   Activity[]
  notifications Notifications[]

  @@index([user_id])
  @@map("businesses")
}

model Activity {
  id String @id @default(uuid())
  user_id String
  business_id String
  activity_text String @db.Text
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  user Users @relation(fields: [user_id], references: [id])
  business Businesses @relation(fields: [business_id], references: [id])

  @@index([business_id, deleted_at])
  @@index([user_id, deleted_at])
  @@map("activities")
}

model Notifications {
  id String @id @default(uuid())
  user_id String
  business_id String
  notification_text String @db.Text
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  user Users @relation(fields: [user_id], references: [id])
  business Businesses @relation(fields: [business_id], references: [id])
  @@index([business_id, deleted_at])
  @@index([user_id, deleted_at])
  @@map("notifications")
}

enum ProductUnit {
  PCS
  BOX
  KG
  LITER
  PACK
}

model Products {
  id          String      @id @default(uuid())
  business_id String
  name        String
  unit        ProductUnit
  price       Int
  image_url   String? // Cloudflare CDN url
  is_active   Boolean     @default(true)
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  deleted_at  DateTime?

  business Businesses @relation(fields: [business_id], references: [id])
  stocks   Stocks[]
  ai_recommendations AiRecommendations[]

  @@index([business_id])
  @@map("products")
}

model Stocks {
  id            String    @id @default(uuid())
  product_id    String
  stock_on_hand Int
  updated_at    DateTime  @updatedAt
  deleted_at    DateTime?

  product Products @relation(fields: [product_id], references: [id])

  @@index([product_id])
  @@map("stocks")
}

enum TrxType {
  SALE
  PURCHASE
  ADJUSTMENT
}

// enum TrxStatus {
//   SUCCESS
//   PENDING
//   FAILED
// }

enum TrxPaymentMethod {
  CASH
  CREDIT
  DEBIT
}

model Transactions {
  id          String   @id @default(uuid())
  business_id String
  trx_type    TrxType
  trx_date    DateTime

  //status      TrxStatus
  payment_method TrxPaymentMethod
  paid_at    DateTime?

  total_amount    Int
  subtotal_amount Int
  discount_amount Int


  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  business          Businesses         @relation(fields: [business_id], references: [id])
  transaction_items TransactionItems[]

  @@index([business_id])
  @@map("transactions")
}

model TransactionItems {
  id             String    @id @default(uuid())
  transaction_id String
  product_id     String
  quantity       Int
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  deleted_at     DateTime?

  unit_price Int
  line_price   Int

  transaction Transactions @relation(fields: [transaction_id], references: [id])

  @@index([product_id])
  @@index([transaction_id])
  @@map("transaction_items")
}

enum AiRunStatus {
  PROCESSING
  COMPLETED
  FAILED
}

model AiRuns {
  id            String      @id @default(uuid())
  business_id   String
  status        AiRunStatus
  generated_at  DateTime
  error_message String?     @db.Text
  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt
  deleted_at    DateTime?

  business           Businesses          @relation(fields: [business_id], references: [id], onDelete: Cascade)
  insights           AiInsights[]
  ai_recommendations AiRecommendations[]

  @@index([business_id])
  @@map("ai_runs")
}

model AiInsights {
  id                     String    @id @default(uuid())
  ai_run_id              String
  pattern_trend_summary  String    @db.Text
  urgent                 String    @db.Text
  medium                 String    @db.Text
  low                    String    @db.Text
  created_at             DateTime  @default(now())
  updated_at             DateTime  @updatedAt
  deleted_at             DateTime?

  ai_run AiRuns @relation(fields: [ai_run_id], references: [id], onDelete: Cascade)

  @@index([ai_run_id])
  @@map("ai_insights")
}

enum AiRecommendationsAction {
  RESTOCK
  WAIT
  REDUCE
}

enum AiRecommendationsRiskLevel {
  HIGH
  MEDIUM
  LOW
}

model AiRecommendations {
  id                  String                      @id @default(uuid())
  ai_run_id           String
  product_id          String
  current_stock       Int
  recommended_action  AiRecommendationsAction
  quantity_min        Int
  quantity_max        Int
  risk_level          AiRecommendationsRiskLevel
  days_until_stockout Int
  reason_text         String                      @db.Text
  created_at          DateTime                    @default(now())
  updated_at          DateTime                    @updatedAt
  deleted_at          DateTime?

  ai_run  AiRuns   @relation(fields: [ai_run_id], references: [id], onDelete: Cascade)
  product Products @relation(fields: [product_id], references: [id], onDelete: Cascade)
  ai_recommendations_actions AiRecommendationsActions[]

  @@index([ai_run_id])
  @@index([product_id])
  @@map("ai_recommendations")
}


enum AiRecommendationsActionsActionType {
  DONE
  DELAY
  IGNORE
}

model AiRecommendationsActions {
  id String @id @default(uuid())
  ai_recommendation_id String
  action_type AiRecommendationsActionsActionType
  note_text String
  action_at DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  ai_recommendation AiRecommendations @relation(fields: [ai_recommendation_id], references: [id], onDelete: Cascade)

  @@index([ai_recommendation_id])
  @@map("ai_recommendations_actions")
}