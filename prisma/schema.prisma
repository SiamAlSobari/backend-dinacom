generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id         String      @id @default(uuid())
  name       String
  email      String
  password   String
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  deleted_at DateTime?
  businesses Businesses?

  subscriptions Subscriptions[]
  payments      Payments[]

  @@unique([email, deleted_at])
  @@index([email, deleted_at])
  @@map("users")
}

enum SubscriptionDuration {
  MONTHLY_1
  MONTHLY_2
  MONTHLY_3
  YEARLY_1
}

enum SubscriptionStatus {
  ACTIVE
  PENDING
  CANCELLED
  EXPIRED
}

model Subscriptions {
  id String    @id @default(uuid())
  user_id String
  plan_duration SubscriptionDuration
  start_date DateTime
  status SubscriptionStatus
  end_date DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  payments Payments[]
  @@unique([user_id, deleted_at])
  @@index([user_id, deleted_at])
  @@map("subscriptions")
}

enum PaymentStatus {
  PENDING
  CAPTURE
  SETTLEMENT
  DENY
  CANCEL
  EXPIRED
  REFUND
}

model Payments {
  id String @id @default(uuid())
  user_id String
  subscription_id String
  order_id String
  gross_amount Int
  payment_type String?
  transaction_time DateTime?
  status PaymentStatus
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  subscription Subscriptions @relation(fields: [subscription_id], references: [id], onDelete: Cascade)
  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  @@index([user_id, deleted_at])
  @@map("payments")
}

model Businesses {
  id         String    @id @default(uuid())
  user_id    String    @unique
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  owner        Users          @relation(fields: [user_id], references: [id])
  products     Products[]
  ai_runs      AiRuns[]
  transactions Transactions[]
  activities   Activity[]
  notifications Notifications[]

  @@index([user_id])
  @@map("businesses")
}

enum ActivityType {
  TRANSACTION_SALE
  TRANSACTION_PURCHASE
  STOCK_ADJUSTMENT
  CREATE_PRODUCT
  UPDATE_PRODUCT
}

model Activity {
  id String @id @default(uuid())
  business_id String
  activity_text String @db.Text
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?
  activity_type ActivityType?

  business Businesses @relation(fields: [business_id], references: [id])

  @@index([business_id, deleted_at])
  @@map("activities")
}

model Notifications {
  id String @id @default(uuid())
  business_id String
  is_active Boolean @default(true)
  is_read Boolean @default(false)
  notification_text String @db.Text
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  business Businesses @relation(fields: [business_id], references: [id])
  @@index([business_id, deleted_at])
  @@map("notifications")
}

enum ProductUnit {
  PCS
  BOX
  KG
  LITER
  PACK
}

model Products {
  id          String      @id @default(uuid())
  business_id String
  name        String
  unit        ProductUnit
  price       Int
  image_url   String? // Cloudflare CDN url
  is_active   Boolean     @default(true)
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  deleted_at  DateTime?

  business           Businesses          @relation(fields: [business_id], references: [id])
  stocks             Stocks[]
  ai_recommendations AiRecommendations[]
  transaction_items  TransactionItems[]
  forecasts          AiForecasts[]
  product_analysis   AiProductAnalysis[]

  @@index([business_id])
  @@map("products")
}

model Stocks {
  id            String    @id @default(uuid())
  product_id    String
  stock_on_hand Int
  updated_at    DateTime  @updatedAt
  deleted_at    DateTime?

  product Products @relation(fields: [product_id], references: [id])

  @@index([product_id])
  @@map("stocks")
}

enum TrxType {
  SALE
  PURCHASE
  ADJUSTMENT
}

// enum TrxStatus {
//   SUCCESS
//   PENDING
//   FAILED
// }

enum TrxPaymentMethod {
  CASH
  CREDIT
  DEBIT
  QRIS
}

model Transactions {
  id          String   @id @default(uuid())
  business_id String
  trx_type    TrxType
  trx_date    DateTime

  //status      TrxStatus
  payment_method TrxPaymentMethod
  paid_at    DateTime?

  total_amount    Int
  subtotal_amount Int
  discount_amount Int


  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  business          Businesses         @relation(fields: [business_id], references: [id])
  transaction_items TransactionItems[]

  @@index([business_id])
  @@map("transactions")
}

model TransactionItems {
  id             String    @id @default(uuid())
  transaction_id String
  product_id     String
  quantity       Int
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  deleted_at     DateTime?

  unit_price Int
  line_price   Int

  transaction Transactions @relation(fields: [transaction_id], references: [id])
  product     Products     @relation(fields: [product_id], references: [id])

  @@index([product_id])
  @@index([transaction_id])
  @@map("transaction_items")
}

enum AiRunStatus {
  PROCESSING
  COMPLETED
  FAILED
}

model AiRuns {
  id            String      @id @default(uuid())
  business_id   String
  status        AiRunStatus
  generated_at  DateTime
  error_message String?     @db.Text
  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt
  deleted_at    DateTime?

  business              Businesses            @relation(fields: [business_id], references: [id], onDelete: Cascade)
  insights              AiInsights[]
  ai_recommendations    AiRecommendations[]
  meta                  AiRunMeta?
  portfolio_insights    AiPortfolioInsights?
  forecasts             AiForecasts[]
  product_analysis      AiProductAnalysis[]

  @@index([business_id])
  @@map("ai_runs")
}

model AiInsights {
  id                     String    @id @default(uuid())
  ai_run_id              String
  pattern_trend_summary  String    @db.Text
  urgent                 String    @db.Text
  medium                 String    @db.Text
  low                    String    @db.Text
  created_at             DateTime  @default(now())
  updated_at             DateTime  @updatedAt
  deleted_at             DateTime?

  ai_run AiRuns @relation(fields: [ai_run_id], references: [id], onDelete: Cascade)

  @@index([ai_run_id])
  @@map("ai_insights")
}

enum AiRecommendationsAction {
  RESTOCK
  WAIT
  REDUCE
}

enum AiRecommendationsRiskLevel {
  HIGH
  MEDIUM
  LOW
}

model AiRecommendations {
  id                  String                      @id @default(uuid())
  ai_run_id           String
  product_id          String
  current_stock       Int
  recommended_action  AiRecommendationsAction
  quantity_min        Int
  quantity_max        Int
  risk_level          AiRecommendationsRiskLevel
  days_until_stockout Int
  reason_text         String                      @db.Text
  created_at          DateTime                    @default(now())
  updated_at          DateTime                    @updatedAt
  deleted_at          DateTime?

  ai_run  AiRuns   @relation(fields: [ai_run_id], references: [id], onDelete: Cascade)
  product Products @relation(fields: [product_id], references: [id], onDelete: Cascade)
  ai_recommendations_actions AiRecommendationsActions[]

  @@index([ai_run_id])
  @@index([product_id])
  @@map("ai_recommendations")
}


enum AiRecommendationsActionsActionType {
  DONE
  DELAY
  IGNORE
}

model AiRecommendationsActions {
  id String @id @default(uuid())
  ai_recommendation_id String
  action_type AiRecommendationsActionsActionType
  note_text String
  action_at DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  ai_recommendation AiRecommendations @relation(fields: [ai_recommendation_id], references: [id], onDelete: Cascade)

  @@index([ai_recommendation_id])
  @@map("ai_recommendations_actions")
}

// NEW: Store AI run metadata
model AiRunMeta {
  id                  String    @id @default(uuid())
  ai_run_id           String    @unique
  model_version       String
  total_products      Int
  llm_enabled         Boolean
  llm_success_count   Int
  fallback_count      Int
  total_tokens_used   Int
  created_at          DateTime  @default(now())
  updated_at          DateTime  @updatedAt
  deleted_at          DateTime?

  ai_run AiRuns @relation(fields: [ai_run_id], references: [id], onDelete: Cascade)

  @@index([ai_run_id])
  @@map("ai_run_meta")
}

// NEW: Store portfolio-level insights
model AiPortfolioInsights {
  id                String    @id @default(uuid())
  ai_run_id         String    @unique
  summary           Json      // {total_products, high_risk_count, medium_risk_count, restock_needed_count, estimated_total_restock_qty}
  trends            Json      // {growing_products, declining_products, high_volatility_products}
  priority_actions  Json      // Array of {product_name, risk_level, days_left, priority_score, recommended_qty}
  risk_distribution Json      // {HIGH, MEDIUM, LOW}
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
  deleted_at        DateTime?

  ai_run AiRuns @relation(fields: [ai_run_id], references: [id], onDelete: Cascade)

  @@index([ai_run_id])
  @@map("ai_portfolio_insights")
}

// NEW: Store daily forecast per product
model AiForecasts {
  id              String    @id @default(uuid())
  ai_run_id       String
  product_id      String
  horizon_days    Int
  daily_forecast  Json      // Array of numbers: [2, 3, 2, 4, ...]
  total_demand    Int
  average_per_day Float
  method          String
  confidence      Int
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
  deleted_at      DateTime?

  ai_run  AiRuns   @relation(fields: [ai_run_id], references: [id], onDelete: Cascade)
  product Products @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@index([ai_run_id])
  @@index([product_id])
  @@map("ai_forecasts")
}

// NEW: Store per-product analysis
model AiProductAnalysis {
  id                     String    @id @default(uuid())
  ai_run_id              String
  product_id             String
  days_until_stockout    Int?
  risk_level             AiRecommendationsRiskLevel
  urgency_score          Int
  forecast_reliability   String
  priority_score         Int
  priority_tier          String
  sales_patterns         Json      // {trend, volatility, weekend_effect, growth_rate, seasonality, avg_daily_sales, coefficient_of_variation}
  created_at             DateTime  @default(now())
  updated_at             DateTime  @updatedAt
  deleted_at             DateTime?

  ai_run  AiRuns   @relation(fields: [ai_run_id], references: [id], onDelete: Cascade)
  product Products @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@index([ai_run_id])
  @@index([product_id])
  @@map("ai_product_analysis")
}